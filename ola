--1
--a
with recursive antepasa AS(
	select 
		id_actor,
		director
	from 
		director d
	where 
		director in (
			select id 
			from actor
			where nombre = 'Benicio del Toro'
		)
	UNION 
		select 
			d.id_actor,
			d.director
		from
			director as d
		inner join antepasa a on d.director = a.director
) Select * from antepasa;

--b
with recursive antepasa AS(
	select 
		id_actor,
		director
	from 
		director d
	where 
		id_actor in (
			select id 
			from actor
			where nombre = 'Antony Hopkins'
		)
	UNION 
		select 
			d.id_actor,
			d.director
		from
			director as d
		inner join antepasa a on d.id_actor = a.id_actor
) Select * from antepasa;

--c
with recursive antepasa AS(
	select 
		id_actor,
		director
	from 
		director d
	where 
		id_actor in (
			select id 
			from actor
			where nombre = 'Eddie Murphy') or director in (select id 
															from actor
															where nombre = 'Eddie Murphy')
	UNION 
		select 
			a.id_actor,
			a.director
		from
			director as d
		inner join antepasa a on d.id_actor = a.id_actor
) Select * from antepasa;


-- d


with recursive antepasa AS(

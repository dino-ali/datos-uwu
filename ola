			where nombre = 'Amy Adams') or director in (select id 
												from actor
												where nombre = 'Amy Adams')
	UNION 
		select 
			d.id_actor,
			d.director
		from
			director as d
		inner join antepasa a on d.id_actor = a.id_actor
) Select * from antepasa;



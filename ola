with recursive antepasa AS(
	select 
		id_actor,
		director
	from 
		director d
	where 
		id_actor in (
			select id 
			from actor
			where nombre = 'Anne Hathaway'
		)
	UNION 
		select 
			d.id_actor,
			d.director
		from
			director as d
		inner join antepasa a on d.id_actor = a.id_actor
) Select * from antepasa;



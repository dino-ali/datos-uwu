create function estudiante_por_codigo(cod_est varchar (5))
returns varchar (20)
as $$
declare
	nombre varchar(20);
begin
	nombre=
		(select s.name
		from student as s
		where s.id = cod_est);
	return nombre;
end;
$$ Language plpgsql;
select estudiante_por_codigo('45678');

create function bud(pata varchar(20))
returns numeric (12, 2)
as $$
declare
	pres numeric (12, 2);
begin
	pres =
		(select d.budget
		 from department as d
		 where d.dept_name = pata);
	return pres;
end;
$$ Language plpgsql;

'''si algo me queda mal no tengo que borrarla'''
create or replace function bud(pata varchar(20))
returns numeric (12, 2)
as $$
declare
	pres numeric (12, 2);
begin
	pres =
		(select d.budget
		 from department as d
		 where d.dept_name = pata);
	return pres;
end;
$$ Language plpgsql;

create function salsuma(mmm varchar(20))
returns numeric (15,2)
as $$
declare
	total float;
begin
	total=
		(select sum(salary)
		from instructor
		where dept_name = mmm);
	return total;
end;
$$ Language plpgsql;

select salsuma('History')
